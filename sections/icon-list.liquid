{% if section.settings.divider %}<div class="section--divider">{% endif %}

<div class="page-width">
  <div class="icon-list_item wow fadeInUp animated">
    {% for block in section.blocks %}
    <div class="icon_item">
      <div class="icon_img">
        <a {% if block.settings.link != blank %}data-fancybox data-src="{{ block.settings.link }}" href="#"{% endif %}>	<img src="{{ block.settings.image | img_url: '50x' }}"></a>
      </div>
      <div class="icon_text">
        <a {% if block.settings.link != blank %}data-fancybox data-src="{{ block.settings.link }}" href="#"{% endif %}><h4>{{ block.settings.title }}</h4></a>
        <p>{{ block.settings.content }} </p>
      </div>
    </div>
    {% endfor %}
  </div>

  
</div>

{% if section.settings.divider %}</div>{% endif %}


{% schema %}
  {
    "name": "Icon List",
    "class": "icon-list",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Column",
        "settings": [
          {
            "type": "checkbox",
            "id": "enable_image",
            "label": "Show image",
            "default": true
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Example title"
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
		  }
        ]
      }
    ],
    "presets": [
      {
        "name": "Icon List",
        "category": "Text",
        "blocks": [
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          }
        ]
      }
    ]
  }
{% endschema %}
