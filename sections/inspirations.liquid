<div class="">
  {%- if section.settings.title != blank -%}
    <div class="section-header text-{{ section.settings.align_text }}">
      <h2>{{ section.settings.title }}</h2>
    {{ section.settings.content }}
    </div>
  {%- endif -%}
  <div class="ins_items">
    <div class="ins_text">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
          <div class="swiper-slide">
            <div class="ins_detail text-{{ section.settings.align_text }}">
              <div class="in_image">
                <a href="{{ block.settings.video }}">
                  <img src="{{ block.settings.image | img_url : 'master' }}" alt="">
                  <div class="play_icon">
                    <div class="icon_play">
                      <i class="fa fa-play"></i>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
          {%- endfor -%}
        </div>
      </div>
       <div class="swiper-button-prev"><svg version="1.1"  xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
	 width="30px" height="30px" viewBox="0 0 30 30" enable-background="new 0 0 30 30" xml:space="preserve">
<polyline fill="none" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" points="
	21.672,2 8.827,14.845 21.672,27.689 "/>
</svg></div>
       <div class="swiper-button-next"><svg version="1.1"  xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
	 width="30px" height="30px" viewBox="0 0 30 30" enable-background="new 0 0 30 30" xml:space="preserve">
<polyline fill="none" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" points="
	8.827,2 21.672,14.845 8.827,27.689 "/>
</svg></div>
           <div class="swiper-pagination"></div>
      <!--
      <div class="swiper-button-prev"><img src="{% if template contains 'product' %}https://cdn.shopify.com/s/files/1/0551/1351/5085/files/p1084.png?v=1660371562{% else %}https://cdn.shopify.com/s/files/1/0551/1351/5085/files/1085.png?v=1660268999{% endif %}"></div>
      <div class="swiper-button-next"><img src="{% if template contains 'product' %}https://cdn.shopify.com/s/files/1/0551/1351/5085/files/p1083.png?v=1660371562{% else %}https://cdn.shopify.com/s/files/1/0551/1351/5085/files/1083.png?v=1660268686{% endif %}"></div>
       --> 
    </div>
    
  </div>
</div>


<script>
  var swiper = new Swiper(".ins_text .swiper-container", {
        slidesPerView: 1.6,
        autoplay: false,
        spaceBetween: 20,
        loop:true,
        centeredSlides: true,
        centerInsufficientSlides:true,
        navigation: {
            nextEl: '.ins_text .swiper-button-next',
            prevEl: '.ins_text .swiper-button-prev',
        },
        pagination: {
      el: '.ins_text .swiper-pagination',
      clickable :true
    },
    	 breakpoints: {
         0: { /* when window >=0px - webflow mobile landscape/portriat */
        slidesPerView: 1,
          },
         480: { /* when window >=0px - webflow mobile landscape/portriat */
        slidesPerView: 1.3,
          },
        768: { /* when window >= 769px - webflow desktop */
        slidesPerView: 1.6,
          }
         }
      });
  
</script>
{% schema %}
  {
    "name": "Inspirations",
    "class": "ins_list",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "select",
        "id": "align_text",
        "label": "Alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Centered"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "video",
            "label": "Video"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Inspirations",
        "blocks": [
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          },
          {
            "type": "text_block"
          }
        ]
      }
    ]
  }
{% endschema %}
