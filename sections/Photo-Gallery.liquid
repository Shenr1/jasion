{% schema %}
{
    "name": "Event Marketing Images",
    "tag": "section",
    "settings": [
    {
        "type":"text",
        "id":"title",
        "label":"Title",
        "default":"title"
       },
       {
        "type":"text",
        "id":"subheading",
        "label":"subheading",
        "default":"title"
       }
    ],
    "blocks":[
    {
        "type": "image",
        "name": "Image",
        "settings":[
        {
            "type": "image_picker",
