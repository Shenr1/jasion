<section class="Photo-Gallery-{{section.id}}">
    <div class="Halloween page-width">
        <div class="gallery-title">{{ section.settings.title }}</div>
        <div class="gallery-info">{{ section.settings.subheading }}</div>
        <div class="Picture-Distribution swiper-container">
            {% for block in section.blocks %}
            <div class="Distribution-image swiper-wrapper">
                {%- if block.settings.image != blank -%}
                <div class="pamphlets-image swiper-slide">
                    <a href="{{ block.settings.link }}"> <img src="{{ block.settings.image | img_url: 'master' }}" alt=""></a>
                   
                </div>
                {% endif %}  
            </div>
        {% endfor %}
        </div>
    </div>
</section>
<script>
    // 使用JavaScript来初始化Swiper轮播
    var screenWidth = window.innerWidth || document.documentElement.clientWidth || document.body.clientWidth;
    
    if (screenWidth < 768) {
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 1.2,
            spaceBetween: 20,
            loop: true,
            // 添加其他Swiper选项根据需要
        });
    }
    </script>
