          </div>
         
      {% else %}
          <div class="full">{{ block.settings.info_video }}</div>
      {% endif %}
  </div>
</div>


<script>
function toggleContent(index) {
    var truncateText = document.getElementById('truncateText_' + index);
    var shortenText = truncateText.querySelector('.shorten');
    var fullText = truncateText.querySelector('.full');
    var toggleButton = document.getElementById('toggleButton_' + index);
    var toggleButtonMore = document.getElementById('toggleButtonMore_' + index);

    if (shortenText.style.display === 'none' || shortenText.offsetHeight === 0) {
        shortenText.style.display = 'block';
        fullText.style.display = 'none';
        toggleButton.innerHTML = '...See More >';
        toggleButtonMore.style.display = 'none';
    } else {
        shortenText.style.display = 'none';
        fullText.style.display = 'block';
        toggleButton.innerHTML = ''; 
        toggleButtonMore.style.display = 'inline-block'; 
    }

    var contentContainer = document.getElementById('textContainer_' + index);
    var buttonContainer = contentContainer.querySelector('.full');
    contentContainer.insertBefore(toggleButtonMore, buttonContainer.nextSibling);
}
</script>
      
      

