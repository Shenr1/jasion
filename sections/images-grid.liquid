<div class="tw-w-full tw-mt-16">
  <div class="tw-flex">
    {% for block in section.blocks %}
    <div class="tw-w-1/2 odd:tw-pr-1 even:tw-pl-1">
      <a href="{{ block.settings.link }}" class="tw-bg-stone-200 tw-overflow-hidden tw-block">
        <div class="tw-overflow-hidden">
          <img class="tw-block tw-w-full hover:tw-scale-105 tw-transition-all" src="{{ block.settings.image | img_url: 'master' }}">
        </div>
        <div class="tw-px-10 tw-py-6">
          <h4 class="tw-text-3xl tw-m-0 tw-font-semibold tw-tracking-normal">{{ block.settings.title }}</h4>
          <p class="tw-m-0">{{ block.settings.content }}</p>
        </div>
      </a>
    </div>
    {% endfor %}
  </div>
</div>


{% schema %}
  {
    "name": "Images grid",
    "settings": [
    ],
    "blocks": [
      {
        "type": "text_block",
        "name": "Column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "link_list",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Save $900"
          },
          {
            "type": "text",
            "id": "content",
            "label": "Content",
            "default": "Combo Sale-EB7 2.0 Folding Electric Bike x2"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Images grid"
      }
    ]
  }
{% endschema %}
