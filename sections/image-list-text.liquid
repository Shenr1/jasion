{%- assign secSt = section.settings -%}

{% if secSt.img != blank or secSt.bg_img != blank %}

  <section section-name="image-list-text"
     style="background-color:{{secSt.bg_color}};
     {% if secSt.bg_img != blank %} 
     background-image:url({{secSt.bg_img | img_url:'1920x'}});
     height:{{secSt.bg_img.height | times: 100 | divided_by: secSt.bg_img.width | divided_by: 1.0}}vw;
     {% comment %} min-height:{{secSt.bg_img.height | times: 100 | divided_by: secSt.bg_img.width | divided_by: 0.85}}vw; {% endcomment %}
    {% endif %}"
     class="{% unless secSt.full_width %}page-width{% endunless %} tw-bg-no-repeat tw-bg-cover {% render 'section-interva-set' , secSt:secSt %}" >

    <div class="tw-h-full {% if secSt.full_width %}tw-w-full{% endif %} tw-mx-auto md:tw-flex tw-items-center {% if secSt.bottom_line %}tw-border-solid tw-border-0 tw-border-b tw-border-black-300 tw-pb-8 {% endif %}">

      <div class='md:tw-w-1/2 tw-flex tw-justify-center tw-items-center {% if secSt.layout == "textImage" %}tw-order-3{%else%}tw-order-1{% endif %}' >
        {% if secSt.img != blank %}
          {% include 'aspect-ratio-img', media: secSt.img ,class: 'tw-block'%}
          {% comment %} {{ secSt.img | image_url: width: 1000 | image_tag: width: nil, loading: 'lazy', class:'tw-block' }} {% endcomment %}
        {% endif %}
      </div>

      
      <div class="md:tw-w-1/2 tw-order-2 tw-flex tw-flex-col {% if secSt.layout == "textImage" %}xl:tw-pr-20 md:tw-pr-8 {%else%}xl:tw-pl-24 md:tw-pl-8{% endif %}{% if secSt.full_width %}lg:tw-p-0 tw-p-4{% endif %}">
        <div class="md:tw-mr-2"> 
          <h1 class="xl:tw-text-5xl md:tw-text-3xl tw-text-2xl xl:tw-mb-7 md:tw-mb-4">{{ secSt.text_main  }}</h1>
          <p class="xl:tw-text-xl tw-text-lg xl:tw-mb-12 tw-mb-6 tw-text-stone-600 xl:tw-leading-normal tw-leading-snug">{{ secSt.text_sub }}</p>
        </div>

        {% if secSt.text_layout == 'horizontal' %}
            {% assign flexClass = 'tw-flex-wrap' %}
          {% else %}
            {% assign flexClass = 'tw-flex-col' %}
        {% endif %}
       
        <div class="tw-flex {{flexClass}} {{ secSt.text_align }}">
          {%- case section.settings.i_size -%}
            {%- when "default" -%}
              {%- assign titleSize = 'tw-text-2xl' -%}
              {%- assign textSize = 'tw-text-base' -%}
            {%- else -%}
              {%- assign titleSize = 'xl:tw-text-3xl tw-text-2xl' -%}
              {%- assign textSize = 'xl:tw-text-lg tw-text-base' -%}
          {%- endcase -%}

          {% for block in section.blocks %}
          {%- assign length = forloop.length -%}
          {%- assign blkSt = block.settings -%}
          {% if length == 2 or length == 4 or secSt.text_layout == 'vertical' %}
            {%- assign wClass = 'tw-w-1/2' -%}
            {% else %}
            {%- assign wClass = 'md:tw-w-1/3 tw-w-1/2' -%}
          {% endif %}
            <div class="{{wClass}} tw-mb-8 ">
              {% if blkSt.icon != blank %}
              <div class="tw-w-16 tw-mx-auto">
                {% include 'aspect-ratio-img', media: blkSt.icon ,class: ''%}
              </div>
              {% endif %}
              <p class="tw-m-0 tw-mt-2 tw-font-semibold tw-leading-tight {{titleSize}}">{{blkSt.item_title}}</p>
              <p class="tw-m-0 {{textSize}} tw-text-stone-500">{{blkSt.item_dec}}</p>
            </div>
          {% endfor %}
          {% if secSt.btm_img != blank %}
          <div tag-name="bottom-image" class="tw-mt-6" style="width:{{secSt.btm_img_w}}%">
            {{ secSt.btm_img | image_url: width: 800 | image_tag: width: nil, loading: 'lazy' }}
          </div>
          {% endif %}

        </div>
      </div>
    </div>
  </section>  
{% endif %}



