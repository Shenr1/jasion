{%- assign secSt = section.settings -%}

<section section-name="image-list-text" class="{% render 'section-interva-set' , secSt:secSt %}">
  <div class="tw-flex md:tw-flex-wrap tw-flex-nowrap tw-whitespace-nowrap md:tw-px-0 tw-pl-[18px] tw-overflow-x-auto md:pb-0 tw-pb-4">
    {% for block in section.blocks %}
      {% if block.settings.img_url != blank %}
      <div class="md:tw-w-1/3 tw-w-4/5 md:tw-pr-0 tw-pr-4 md:tw-flex-initial tw-flex-[0_0_80%] md:tw-block md:[&:nth-child(3n+2)]:tw-px-2 tw-pb-2">
        <div class="tw-flex-col-reverse md:tw-block tw-flex tw-relative tw-group tw-overflow-hidden tw-h-full tw-group tw-justify-between
          md:before:tw-content-[''] before:tw-z-10 md:before:tw-transition-all before:tw-duration-[0.3s] before:tw-absolute before:tw-w-full before:tw-h-full before:tw-left-0 before:tw-top-full before:tw-bg-black before:tw-opacity-60 hover:before:tw-top-0">
          <div class="tw-h-auto md:tw-h-full">
            {% include 'aspect-ratio-img', media: block.settings.img_url ,class: 'tw-block'%}
          </div>
          <div class="md:tw-absolute tw-w-full md:tw-text-white xl:tw-top-1/3 md:tw-top-[15%] tw-top-1/4 md:tw-text-center md:tw-opacity-0 md:group-hover:tw-opacity-100 lg:tw-px-12 md:tw-px-4 md:tw-transition-all tw-duration-500 tw-z-20">
            <p class="md:tw-mb-4 mb-2 tw-font-semibold md:tw-text-3xl tw-text-2xl">{{ block.settings.title }}</p>
            <p class="md:tw-text-lg lg:tw-leading-snug md:tw-leading-tight tw-leading-snug tw-whitespace-break-spaces">{{ block.settings.content }}</p>
          </div>
        </div>
      </div>
      {% endif %}
    {% endfor %}
  </div>
</section>


{% schema %}
  {
    "name": "Image text switch v1.1",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Section interval set"
      },
      {
        "type": "select",
        "id": "top_padding",
        "label": "top interval",
        "default": "large",
        "options": [
          {
            "value": "large",
            "label": "Large"
          },
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "none",
            "label": "None"
          }
        ]
      },
      {
        "type": "select",
        "id": "bottom_padding",
        "label": "bottom interval",
        "default": "default",
        "options": [
          {
            "value": "large",
            "label": "Large"
          },
          {
            "value": "default",
            "label": "Default"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "none",
            "label": "None"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "img_url",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Headlight&Taillight"
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Content",
            "default": "Brighter LED headlights, make riding more convenient and safer. The integrated taillight will flash when brake, making it a warning light at night."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image text switch v1.1"
      }
    ]
  }
{% endschema %} 