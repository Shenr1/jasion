<div class="coll_top" style="background:url({{ section.settings.image | img_url:"master" }}) no-repeat center;height:540px;">
  <div class="page-width">
    <h1>{% if section.settings.title != blank %}{{ section.settings.title }}{% else %}{{ collection.title }}{% endif %}</h1>
  </div>
</div>
{% schema %}
  {
    "name": "Collection top",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
{% endschema %}